
<div class="settings__toggle" on-click="toggle">
  <span class="settings__toggle-icon">
    {{>icon}}
  </span>
  <span class="_title">{{title}}</span>
  <span class="_state">
    <span class="_icon" id="arrow">
      {{>svg_arrow}}
    </span>
  </span>
</div>

<div class="settings__group" id="{{id}}">
  <div class="_content">
    {{>content}}
  </div>
</div>
