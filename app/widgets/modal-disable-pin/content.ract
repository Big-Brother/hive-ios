<div class="flash">
  <div class="disable-pin__container">
    <div class="disable-pin__pin">
      <label class="_label">
          Enter your pin:
        <input id="setPin" class="_input" type="password" pattern="[0-9]*" placeholder="4-digit pin" value="{{pin}}" on-enter='disable-pin' />
      </label>
    </div>

    <div class="auth__btn--existing" on-click="disable-pin">Disable pin</div>
  </div>
</div>
